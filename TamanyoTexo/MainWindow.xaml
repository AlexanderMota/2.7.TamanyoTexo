<Window x:Class="TamanyoTexo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TamanyoTexo"
        mc:Ignorable="d"
        Title="Tamaño de la fuente" Icon="/img/48.ico"
        Height="370" Width="770">
    <Grid>
        <TextBox 
            x:Name="Texto"
            Margin="10,50,200,80"
            />
        <RadioButton
            x:Name="RBoton1"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="650,100,0,0"
            Click="RBoton_Click"/>
        <RadioButton
            x:Name="RBoton2"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"  
            Margin="650,140,0,0"
            Click="RBoton_Click"/>
        <RadioButton
            x:Name="RBoton3"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"  
            Margin="650,180,0,0"
            Click="RBoton_Click"/>
    </Grid>
</Window>
